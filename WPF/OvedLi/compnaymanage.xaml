        <Button  Grid.Column="0" Grid.Row="1" x:Name="addemployeebtn" Click="addemployeebtn_Click"  HorizontalAlignment="Left"  VerticalAlignment="Top" Width="49" RenderTransformOrigin="-0.535,-0.033" Background="{x:Null}" BorderBrush="{x:Null}" Height="43" Margin="55,32,0,0">
