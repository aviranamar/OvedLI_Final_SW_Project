        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Image Grid.Column="1" Grid.Row="0" x:Name="logoimg" HorizontalAlignment="Left" Height="100"  VerticalAlignment="Top" Width="100" Source = "pack://application:,,,/OvedLi;component/Resources/logo_transparent.png"/>
        <Button  Grid.Column="0" Grid.Row="0" x:Name="picturereplace" Click="picturereplace_Click"  HorizontalAlignment="Left" Margin="42,61,0,0" VerticalAlignment="Top" Width="153" RenderTransformOrigin="-0.535,-0.033" Background="{x:Null}" BorderBrush="{x:Null}" Height="99">
            <Image  x:Name="comlogo" HorizontalAlignment="Left" Height="100"  VerticalAlignment="Top" Width="100" />
        </Button>
        <Button  Grid.Column="2" Grid.Row="1" x:Name="addservicebtn" Click="addservicebtn_Click"  HorizontalAlignment="Left"  VerticalAlignment="Top" Width="49" RenderTransformOrigin="-0.535,-0.033" Background="{x:Null}" BorderBrush="{x:Null}" Height="43" Margin="55,32,0,0">
            <Image  x:Name="addserviceimg" HorizontalAlignment="Left" Height="43"  VerticalAlignment="Top" Width="49" Source = "pack://application:,,,/OvedLi;component/Resources/service-add.png"/>
